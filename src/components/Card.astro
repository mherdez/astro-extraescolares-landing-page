---
interface Props {
	id: string;
	title: string;
	icon: string;
}

const { id, title, icon } = Astro.props;
---

<article class="card">
	<img class="image" src=`https://picsum.photos/id/${id}/200/180` alt="" />
	<p class="title">{title}</p>
	<p class='icon'>{icon}</p>
	<div class='gardient'></div>
</article>

<style>
	.card {
		position: relative;
		overflow: hidden;
		border-radius: 0.25rem;
		border: 2px solid rgba(228, 228, 231, .2);
		width: 100%;
	}
	.image {
		width: 100%;
		filter: brightness(0.3);
	}
	.title, .icon {
		position: absolute;
		font-size: 1.6rem;
		line-height: 2.25rem;
		letter-spacing: 0.025em;
		font-weight: 400;
		transition: all .4s ease-in-out;
		transform: translate(-50%, -50%);
		left: 50%;
	}
	.icon {
		top: 40%;
		font-size: 50px;
	}
	.title {
		top: 70%;
	}
	.card:hover {
		cursor: pointer;
		border-color: transparent;
	}
	.card:hover .icon  {
		transform: translate(-50%, -350%);
	}
	.card:hover .title  {
		transform: translate(-50%, 10%);
		z-index: 1;
	}
	.card:hover .image  {
		filter: brightness(1) blur(0);
	}

	.card:hover .gardient{
		position: absolute;
		bottom:0%;
		left:0%;
		background: linear-gradient(transparent, rgba(0,0,0,1));
		height: 75px;
		width: 100%;
	}
</style>